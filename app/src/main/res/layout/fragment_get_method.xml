<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.looper.loop.PreferencesFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Request"
                android:textSize="30dp"
                android:id="@+id/requestLabelTextView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Method: "
                android:id="@+id/requestMethodLabel"
                android:layout_below="@+id/requestLabelTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Collection: "
                android:id="@+id/requestCollectionLabelTextView"
                android:layout_below="@+id/requestMethodLabel"
                android:layout_alignLeft="@+id/requestMethodLabel"
                android:layout_alignStart="@+id/requestMethodLabel"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Object ID: "
                android:id="@+id/requestObjectIdLabelTextView"
                android:layout_below="@+id/requestCollectionLabelTextView"
                android:layout_alignLeft="@+id/requestMethodLabel"
                android:layout_alignStart="@+id/requestMethodLabel"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="URL: "
                android:id="@+id/requestUrlLabelTextView"
                android:layout_below="@+id/requestObjectIdLabelTextView"
                android:layout_alignLeft="@+id/requestMethodLabel"
                android:layout_alignStart="@+id/requestMethodLabel"
                android:layout_marginTop="30dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/collectionEditText"
                android:layout_alignBottom="@+id/requestCollectionLabelTextView"
                android:layout_toRightOf="@+id/requestCollectionLabelTextView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/objectIdEditText"
                android:layout_alignBottom="@+id/requestObjectIdLabelTextView"
                android:layout_alignLeft="@+id/collectionEditText"
                android:layout_alignStart="@+id/collectionEditText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/requestMethodTextView"
                android:layout_above="@+id/requestCollectionLabelTextView"
                android:layout_alignLeft="@+id/collectionEditText"
                android:layout_alignStart="@+id/collectionEditText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/requestUrlTextView"
                android:layout_alignTop="@+id/requestUrlLabelTextView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/objectIdEditText"
                android:layout_alignStart="@+id/objectIdEditText" />
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>